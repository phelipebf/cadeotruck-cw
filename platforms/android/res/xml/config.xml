<?xml version='1.0' encoding='utf-8'?>
<widget id="com.accelinova.cadeotruck" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <preference name="webView" value="org.crosswalk.engine.XWalkWebViewEngine" />
    <feature name="HttpRequest">
        <param name="android-package" value="plugin.http.request.HttpRequest" />
    </feature>
    <feature name="GoogleMaps">
        <param name="android-package" value="plugin.google.maps.GoogleMaps" />
    </feature>
    <feature name="External">
        <param name="android-package" value="plugin.google.maps.External" />
    </feature>
    <feature name="Geocoder">
        <param name="android-package" value="plugin.google.maps.MyGeocoder" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <allow-intent href="market:*" />
    <splash density="port-hdpi" src="www/img/splash.png" />
    <splash density="port-ldpi" src="www/img/splash.png" />
    <splash density="port-mdpi" src="www/img/splash.png" />
    <splash density="port-xhdpi" src="www/img/splash.png" />
    <name>CadÃª o Truck?</name>
    <description>
        Encontre seu food truck predileto onde ele estiver.
    </description>
    <author email="accelinova@gmail.com" href="http://accelinova.net">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <icon src="img/logo.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="xwalkVersion" value="14.43.343.17" />
    <preference name="AutoHideSplashScreen" value="false" />
    <feature name="DatePickerPlugin">
        <param name="android-package" value="com.plugin.datepicker.DatePickerPlugin" />
    </feature>
</widget>
